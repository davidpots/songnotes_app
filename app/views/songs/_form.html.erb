<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label "Published?" %><br />
    <%= f.radio_button :published, true %>
    <%= f.label :published, 'True', :value => 'True' %>
    <%= f.radio_button :published, false %>
    <%= f.label :published, 'False', :value => 'False' %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :artist %><br />
    <%= f.text_field :artist %>
  </div>
  <div class="field">
    <%= f.label :year %><br />
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :album %><br />
    <%= f.text_field :album %>
  </div>
  <div class="field">
    <%= f.label "Lyrics (text)" %><br />
    <%= f.text_area :lyrics_text %>
  </div>
  <div class="field">
    <%= f.label "Lyrics (HTML, mono)" %><br />
    <%= f.text_area :lyrics_html_mono %>
  </div>
  <div class="field">
    <%= f.label "Lyrics (HTML, custom)" %><br />
    <%= f.text_area :lyrics_html_custom %>
  </div>
  <div class="field">
    <%= f.label "Notes" %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="field">
    <%= f.label "Record Label" %><br />
    <%= f.text_field :record_label %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
