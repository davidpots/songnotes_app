<%# ---------------------------------------------- %>
<%#    SONG HEADER                                 %>
<%# ---------------------------------------------- %>
<div class="bucket song_header">
  <h1><%= @song.title %></h1>
  <h3>by <%= @song.artist %></h3>
  <!-- <h4><%= @song.album %> &bull; <%= @song.year %></h4> -->
</div> <!-- end: .bucket .song_header -->

<%# ---------------------------------------------- %>
<%#    LYRICS & CHORDS                             %>
<%# ---------------------------------------------- %>
<div class="bucket lyrics">
  <pre><%= @song.lyrics_html_mono.present? ? (@song.lyrics_html_mono).html_safe : (@song.lyrics_text).html_safe %></pre>
</div> <!-- end: .bucket -->

<%# ---------------------------------------------- %>
<%#    NOTES                                       %>
<%# ---------------------------------------------- %>
<% if @song.notes.present? %>
  <div class="bucket notes">
    <h2>Notes</h2>
    <%= (@song.notes).html_safe %>
  </div> <!-- end: .bucket -->
<% end %>

<div class="bucket">
  <h2>Chords</h2>
<pre><span style="font-weight:600">INTRO</span>
| <span class="chords">Am</span> . . . | <span class="chords">C</span> . . . | <span class="chords">F</span> . . . | <span class="chords">C</span> . . . | (x2)

<span style="font-weight:600">VERSE</span>
<span style="color:#999;font-weight:200;">("Sail on the horizon...")</span>
| <span class="chords">G</span> . . . | . . . . | <span class="chords">C</span> . . . | . . . . | 
| <span class="chords">G</span> . . . | . . . . | <span class="chords">C</span> . . . | . . . . |
| <span class="chords">F</span> . . . | <span class="chords">C</span> . . . | <span class="chords">F</span> . . . | <span class="chords">G</span> . . . |
| <span class="chords">F</span> . . . | <span class="chords">C</span> . . . | <span class="chords">G</span> . . . | <span class="chords">C</span> . . . |

<span style="font-weight:600">CHORUS</span>
<span style="color:#999;font-weight:200;">("A sailor spends his Christmas...")</span>
| <span class="chords">Am</span> . . . | <span class="chords">Em</span> . . . | <span class="chords">F</span> . . . | <span class="chords">G</span> . . . |
| <span class="chords">F</span>  . <span class="chords">C</span> . | <span class="chords">F</span>  . <span class="chords">C</span> . | <span class="chords">F</span> . . . | <span class="chords">G</span> . . . |
| <span class="chords">F</span>  . . . | <span class="chords">C</span>  . . . | <span class="chords">F</span> . . . | <span class="chords">G</span> . . . |
| <span class="chords">F</span>  . . . | <span class="chords">C</span>  . . . | <span class="chords">G</span> . . . | <span class="chords">C</span> . . . |</pre>
</div>

<%# ---------------------------------------------- %>
<%#    SONG INFO                                   %>
<%# ---------------------------------------------- %>
<div class="bucket info">
  <h2>Song Info</h2>
  <p>
    <strong>Song: </strong><%= @song.title %><br />
    <strong>Artist: </strong><%= @song.artist %><br />
    <strong>Album: </strong><%= @song.album %><br />
    <strong>Year: </strong><%= @song.year %><br />
    <strong>Label: </strong><%= @song.record_label.present? ? @song.record_label : "--" %>
  </p>
</div> <!-- end: .bucket -->