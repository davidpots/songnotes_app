<%# ---------------------------------------------- %>
<%#    SONG HEADER                                 %>
<%# ---------------------------------------------- %>
<div class="container song_header">
  <div class="bucket">
    <h1><%= @song.title %></h1>
    <p>by <%= @song.artist %></p>
    <a id="cpanel_toggle" href="">&nbsp;</a>
    <img id="cpanel_arrow" style="display:none;" src="/assets/song_dots_arrow.png" />
  </div> <!-- end: .bucket .song_header -->
</div>

<%# ---------------------------------------------- %>
<%#    LYRICS                                      %>
<%# ---------------------------------------------- %>
<div class="container song_lyrics">
  <div class="cpanel" style="display:none;">
    <div class="bucket">
      <h4>Show chords?</h4>
      <ul class="chord_switch">
        <li><a id="chords_show_none" href="#">hide all chords</a></li>
        <li><a id="chords_show_once" href="#" class="active">show each progression once</a></li>
        <li><a id="chords_show_all" href="#">show for entire song</a></li>
      </ul>
    </div>
  </div>
  <div class="bucket">
    <%= @song.lyrics_html_mono.present? ? (@song.lyrics_html_mono).html_safe : (@song.lyrics_text).html_safe %>
  </div> <!-- end: .bucket -->
</div>

<%# ---------------------------------------------- %>
<%#    NOTES                                       %>
<%# ---------------------------------------------- %>
<% if @song.notes.present? %>
<div class="container song_notes">
  <div class="bucket">
    <h2>Notes</h2>
    <%= (@song.notes).html_safe %>
  </div> <!-- end: .bucket -->
</div>
<% end %>

<%# ---------------------------------------------- %>
<%#    CHORDS                                       %>
<%# ---------------------------------------------- %>
<% if @song.chords.present? %>
<div class="container song_chords">
  <div class="bucket">
    <h2>Chords</h2>
    <%= (@song.chords).html_safe %>
  </div>
</div>
<% end %>

<%# ---------------------------------------------- %>
<%#    SONG INFO                                   %>
<%# ---------------------------------------------- %>
<div class="container song_info">
  <div class="bucket">
    <h2>Song Info</h2>
    <p>
      <strong>Song: </strong><%= @song.title %><br />
      <strong>Artist: </strong><%= @song.artist %><br />
      <strong>Album: </strong><%= @song.album %><br />
      <strong>Year: </strong><%= @song.year %><br />
      <strong>Label: </strong><%= @song.record_label.present? ? @song.record_label : "--" %>
    </p>
  </div> <!-- end: .bucket -->
</div>