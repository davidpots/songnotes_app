<div style="padding: 20px;">
    <h1>You have <span style="background:yellow"><%= @songs.count %></span> published songs</h1>

    <p style="margin:20px 0"><%= link_to 'Add New Song', new_song_path %></p>

    <table>
      <tr>
        <th>Title</th>
        <th>Artist</th>
        <th>Year</th>
        <th>Album</th>
        <th>Record Label</th>
        <th colspan="3"></th>
      </tr>

    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.artist %></td>
        <td><%= song.year %></td>
        <td><%= song.album %></td>
        <td><%= song.record_label? ? song.record_label : "--" %></td>
        <td><%= link_to 'View', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>

    <br />
</div>